<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.sivionmobile.ridon.id.sivionmobilesigner.PdfActivity"
    tools:showIn="@layout/activity_pdf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:textColor="@android:color/primary_text_dark"
        android:text="This document contains digital signature"/>

    <TextView
        android:id="@+id/tvVerified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERIFIED"
        tools:textColor="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/tvNotVerified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NOT VERIFIED"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/tvTRUSTED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRUSTED"
        tools:textColor="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/tvNotTrusted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NOT TRUSTED"
        android:textColor="@android:color/holo_red_dark"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signer"/>

    <TextView
        android:id="@+id/tvSigner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-signer"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom ="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-location"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom ="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reason"/>

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-reason"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom ="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signing Date"/>

    <TextView
        android:id="@+id/tvSigningDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-signing Date"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom ="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timestamp"/>

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-timestamp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom ="20dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/certificates"
        />
</LinearLayout>
